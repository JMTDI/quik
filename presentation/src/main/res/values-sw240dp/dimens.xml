    <!-- Small screen optimizations for flip phones and small devices -->
    
    <!-- Text sizes scaled down for small screens -->
    <dimen name="text_size_primary">14sp</dimen>
    <dimen name="text_size_secondary">12sp</dimen>
    <dimen name="text_size_tertiary">10sp</dimen>
    <dimen name="text_size_toolbar">16sp</dimen>
    
    <!-- Toolbar height reduced for small screens -->
    <dimen name="toolbar_height">48dp</dimen>
    
    <!-- Avatar sizes reduced for small screens -->
    <dimen name="avatar_size_small">40dp</dimen>
    <dimen name="avatar_size_normal">48dp</dimen>
    
    <!-- FAB size reduced for small screens -->
    <dimen name="fab_size">48dp</dimen>
    
    <!-- Padding and margins scaled down -->
    <dimen name="margin_small">4dp</dimen>
    <dimen name="margin_medium">8dp</dimen>
    <dimen name="margin_large">12dp</dimen>
    
    <!-- Touch target sizes for D-pad navigation -->
    <dimen name="touch_target_min">40dp</dimen>
    
    <!-- Message bubble sizes -->
    <dimen name="message_text_size">13sp</dimen>
    <dimen name="message_padding">8dp</dimen>
</resources>
